<Window x:Class="SimStarter.UI.TextPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter value"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <StackPanel Margin="16">
        <TextBlock x:Name="PromptLabel" Margin="0,0,0,8"/>
        <TextBox x:Name="InputBox" Width="260" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="70" Margin="0,0,8,0" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Cancel" Width="70" IsCancel="True" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
