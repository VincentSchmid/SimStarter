<Window x:Class="SimStarter.UI.AppEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="App"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <StackPanel Margin="16" Width="360">
        <TextBlock Text="Name" Margin="0,0,0,4"/>
        <TextBox x:Name="NameBox" Margin="0,0,0,10"/>

        <TextBlock Text="Executable path" Margin="0,0,0,4"/>
        <DockPanel Margin="0,0,0,10">
            <TextBox x:Name="PathBox" Width="250" />
            <Button Content="Browse..." Width="80" Margin="8,0,0,0" Click="Browse_Click"/>
        </DockPanel>

        <TextBlock Text="Arguments" Margin="0,0,0,4"/>
        <TextBox x:Name="ArgsBox" Margin="0,0,0,10"/>

        <CheckBox x:Name="AdminBox" Content="Run as admin" Margin="0,0,0,4"/>
        <CheckBox x:Name="WaitBox" Content="Wait for exit before next app" Margin="0,0,0,10"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="70" Margin="0,0,8,0" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Cancel" Width="70" IsCancel="True" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
